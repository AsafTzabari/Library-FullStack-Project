<%- include('partials/header.ejs'); -%>

<form action="/editBook" method="post">
<div class="AddBookContainer">
<div class="AddBookForm mb-3">
    <label for="exampleFormControlInput1" class="form-label" >Book Name</label>
    <input name="bookName"  class="form-control"  placeholder="e.g. Harry Potter" value="<%=book.name%>">
  </div>
  <div class="AddBookForm mb-3">
  <label for="exampleFormControlInput1" class="form-label">Author Name</label>
  <input name="authorName"  class="form-control" placeholder="Author Name"  value="<%=book.author%>">
</div>
<div class="AddBookForm mb-3">
    <label for="exampleFormControlInput1" class="form-label" >ISBN Number</label>
    <input  name="isbn" class="form-control"  placeholder="ISBN" value="<%=book.isbn%>">
  </div>
  <div class="AddBookSummary mb-3">
    <label for="exampleFormControlTextarea1" class="form-label" >Book summary </label>
    <textarea name ="bookSummary" class="form-control"  rows="15" >"<%=book.summary%>"</textarea>
  </div>
  <input type="hidden" name="bookId" value="<%= book.id %>">
  <button type="submit"  class="btn btn-sm btn-outline-secondary" >Submit</button>
</div>
</form>
 <%- include('partials/footer.ejs'); -%>

